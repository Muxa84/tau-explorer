thead
  tr.text-center
    th.text-center.hidden-xs #{settings.locale.timestamp}
    th.text-center.hidden-xs #{settings.locale.tx_hash}
    th.text-center
      div #{settings.locale.amount}&nbsp;(#{settings.symbol})
